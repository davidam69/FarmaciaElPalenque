@model FarmaciaElPalenque.Models.ViewModels.PedidoDetalleVM
@{
    ViewData["Title"] = "Detalle de compra";
}

<h2 class="mb-1">Detalle de compra</h2>
<p class="text-muted mb-3">
    <strong>N.º:</strong> @Model.Numero &nbsp;|&nbsp;
    <strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Producto</th>
            <th class="text-end">Cant.</th>
            <th class="text-end">Precio</th>
            <th class="text-end">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.Items)
        {
            <tr>
                <td>@i.Nombre</td>
                <td class="text-end">@i.Cantidad</td>
                <td class="text-end">@i.PrecioUnitario.ToString("C")</td>
                <td class="text-end">@i.Subtotal.ToString("C")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-end">Total</th>
            <th class="text-end">@Model.Total.ToString("C")</th>
        </tr>
    </tfoot>
</table>

<div class="d-flex gap-2">
    <a asp-action="Descargar" asp-route-numero="@Model.Numero" class="btn btn-primary">
        Descargar factura (PDF)
    </a>
    <a asp-action="MisCompras" class="btn btn-outline-secondary">Volver</a>
</div>

