@model List<FarmaciaElPalenque.Models.ViewModels.PedidoResumenVM>
@{
    ViewData["Title"] = "Mis compras";
    bool esAdmin = Context.Session.GetString("Rol") == "Administrador";
}

@if (esAdmin)
{
    <h2 class="mb-3">Historial de compras de @ViewBag.NombreUsuario</h2>
}
else
{
    <h2 class="mb-3">Mis compras</h2>
}

@if (!Model.Any())
{
    <div class="alert alert-info">Aún no tenés compras.</div>
}
else
{
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>N.º</th>
                <th>Fecha</th>
                <th class="text-end">Items</th>
                <th class="text-end">Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Numero</td>
                    <td>@p.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-end">@p.CantItems</td>
                    <td class="text-end">@p.Total.ToString("C")</td>
                    <td class="text-end">
                        <a asp-action="Detalle" asp-route-numero="@p.Numero" class="btn btn-sm btn-outline-primary">
                            Ver detalle
                        </a>
                        @if (!esAdmin)
                        {
                            <a asp-action="Descargar" asp-route-numero="@p.Numero" class="btn btn-sm btn-outline-secondary ms-1">
                                PDF
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (esAdmin)
{
    <div class="d-flex gap-2">
        <a asp-controller="Admin" asp-action="Panel" class="btn btn-success">Volver al Panel</a>
        <a asp-controller="Admin" asp-action="Usuarios" class="btn btn-outline-secondary">Volver a Usuarios</a>
    </div>
}
else
{
    <!-- Botón "Volver atrás" solo para usuarios comunes -->
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-outline-secondary" onclick="history.back()">
            <i class="bi bi-arrow-left me-1"></i>Volver atrás
        </button>
        <a asp-controller="Principal" asp-action="Index" class="btn btn-outline-secondary">Catalogo</a>

    </div>
}