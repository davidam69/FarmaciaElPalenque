<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="~/Images/favicon.png" />
    <link rel="shortcut icon" type="image/png" href="~/Images/favicon.png" />
    <title>@ViewData["Title"] - FarmaciaElPalenque</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cards.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmaciaElPalenque.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Principal" asp-action="Index">
                    <img src="~/Images/favicon.png" alt="Logo Farmacia El Palenque" class="me-2" style="height:30px; width:auto;">
                    Farmacia Palenque
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Principal" asp-action="Ofertas">
                                <i class="bi bi-fire me-1"></i> Ofertas
                            </a>
                        </li>
                        @if (Context.Session.GetString("Rol") == "Administrador")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="ResultadosClustering">
                                <i class="bi bi-tags me-1"></i> Predicciones IA</a>
                            </li>
                        }
                        <!-- CAMBIOS DE SEBA: VISTA DE CONTACTO -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Principal" asp-action="Contacto">
                                <i class="bi bi-person-square me-1"></i> Contacto
                            </a>
                        </li>
                        <!-- fin de los cambios -->
                    </ul>

                </div>

                <ul class="navbar-nav ms-auto align-items-center">
                    @if (Context.Session.GetString("Usuario") == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Cuenta" asp-action="Acceso">
                                Iniciar sesión / Crear cuenta
                            </a>
                        </li>
                    }
                    else
                    {
                        // Solo mostramos "Mis compras" si no es Administrador
                        @if (Context.Session.GetString("Rol") != "Administrador")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Pedidos" asp-action="MisCompras">Mis compras</a>
                            </li>
                        }

                        <li class="nav-item">
                            <span class="nav-link">Hola, @Context.Session.GetString("NombreCompleto")</span>
                        </li>

                        @if (Context.Session.GetString("Rol") == "Administrador")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Panel">Admin Panel</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="ListaProductos">Productos</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cuenta" asp-action="Logout">Logout</a>
                        </li>
                    }
                </ul>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FarmaciaElPalenque - Todos los derechos Reservados.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const togglePassword = document.querySelector("#togglePassword");
        const password = document.querySelector("#passwordHash");

        togglePassword.addEventListener("click", function () {
            const type = password.getAttribute("type") === "password" ? "text" : "password";
            password.setAttribute("type", type);
            this.classList.toggle("bi-eye");
            this.classList.toggle("bi-eye-slash");
        });

        const toggleConfirmPassword = document.querySelector("#toggleConfirmPassword");
        const confirmPassword = document.querySelector("#confirmarPasswordHash");

        toggleConfirmPassword.addEventListener("click", function () {
            const type = confirmPassword.getAttribute("type") === "password" ? "text" : "password";
            confirmPassword.setAttribute("type", type);
            this.classList.toggle("bi-eye");
            this.classList.toggle("bi-eye-slash");
        });
    </script>

    @await Component.InvokeAsync("CartBadge")
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>