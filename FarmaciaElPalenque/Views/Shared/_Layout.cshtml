<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarmaciaElPalenque</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cards.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmaciaElPalenque.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f0f4f8;
            min-height: 100vh;
        }


        .navbar {
            background-color: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(5px);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            border-bottom: none !important;
        }

        .navbar-brand {
            font-weight: 800; 
            font-size: 1.5rem;
            color: #212529 !important;
            transition: color 0.3s ease;
        }

            .navbar-brand:hover {
                color: #007bff !important;
            }

        .nav-link {
            transition: all 0.2s ease;
        }

            .nav-link:hover {
                transform: translateY(-2px);
                color: #007bff !important;
            }

      
        .btn-moderno {
            font-size: 1rem;
            font-weight: 600;
            padding: 0.75rem 2rem;
            border-radius: 50px;
            letter-spacing: 0.5px;
            transition: all 0.3s ease-in-out;
            text-decoration: none;
            display: inline-block;
        }

        .btn-login {
            color: #6c757d;
            background-color: transparent;
            border: 2px solid #6c757d;
        }

            .btn-login:hover {
                color: #fff;
                background-color: #6c757d;
                box-shadow: 0 4px 15px rgba(108, 117, 125, 0.4);
                transform: translateY(-2px);
            }

        .btn-registro {
            color: #fff;
            background: linear-gradient(45deg, #007bff, #0056b3);
            border: none;
        }

            .btn-registro:hover {
                box-shadow: 0 4px 20px rgba(0, 123, 255, 0.5);
                transform: translateY(-2px);
                background-image: linear-gradient(45deg, #0056b3, #004085);
            }

      
        .card-hover:hover {
            transform: translateY(-8px);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 1rem 3rem rgba(0,0,0,.15) !important;
        }

        .card-img-container {
            width: 100%;
            height: 180px;
            overflow: hidden;
            border-top-left-radius: 0.25rem;
            border-top-right-radius: 0.25rem;
        }

            .card-img-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s ease;
            }

        .card-hover:hover .card-img-container img {
            transform: scale(1.1);
        }
    </style>
    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Principal" asp-action="Index">
                    <i class="bi bi-capsule-pill me-2"></i>Farmacia El Palenque
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Principal" asp-action="Index">
                                <i class="bi bi-fire me-1"></i> Ofertas
                            </a>
                        </li>
                    </ul>
                </div>

                <ul class="navbar-nav ms-auto align-items-center">
                    @if (Context.Session.GetString("Usuario") == null)
                    {
                        <li class="nav-item me-2">
                            <a asp-area="" asp-controller="Cuenta" asp-action="Login" class="btn-moderno btn-login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Cuenta" asp-action="Registro" class="btn-moderno btn-registro">Regístrate</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link">Hola, @Context.Session.GetString("NombreCompleto")</span>
                        </li>

                        @if (Context.Session.GetString("Rol") == "Administrador")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Panel">Admin Panel</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="ListaProductos">Productos</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cuenta" asp-action="Logout">Logout</a>
                        </li>
                    }
                </ul>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FarmaciaElPalenque - Todos los derechos Reservados.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const togglePassword = document.querySelector("#togglePassword");
        const password = document.querySelector("#passwordHash");

        togglePassword.addEventListener("click", function () {
            const type = password.getAttribute("type") === "password" ? "text" : "password";
            password.setAttribute("type", type);
            this.classList.toggle("bi-eye");
            this.classList.toggle("bi-eye-slash");
        });

        const toggleConfirmPassword = document.querySelector("#toggleConfirmPassword");
        const confirmPassword = document.querySelector("#confirmarPasswordHash");

        toggleConfirmPassword.addEventListener("click", function () {
            const type = confirmPassword.getAttribute("type") === "password" ? "text" : "password";
            confirmPassword.setAttribute("type", type);
            this.classList.toggle("bi-eye");
            this.classList.toggle("bi-eye-slash");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>