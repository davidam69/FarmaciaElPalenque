@model List<FarmaciaElPalenque.Models.Productos>

@{
    ViewData["Title"] = "Nuestros Productos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* Estilos generales para el fondo de la página */
        body {
            background-color: #f0f4f8;
            background-image: radial-gradient(at 0% 0%, hsla(215, 100%, 75%, 0.4) 0, transparent 50%), radial-gradient(at 100% 100%, hsla(270, 100%, 75%, 0.4) 0, transparent 50%), linear-gradient(to top right, rgba(255, 255, 255, 0.2) 0, transparent 50%);
            min-height: 100vh;
            background-attachment: fixed;
        }

        /* Efectos de animación en las tarjetas */
        .card-hover:hover {
            transform: translateY(-8px);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 1rem 3rem rgba(0,0,0,.15) !important;
        }

        /* Contenedor de imagen para evitar distorsión */
        .card-img-container {
            width: 100%;
            height: 180px;
            overflow: hidden;
            border-top-left-radius: 0.25rem;
            border-top-right-radius: 0.25rem;
        }

            /* Efecto de zoom en la imagen */
            .card-img-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s ease;
            }

        .card-hover:hover .card-img-container img {
            transform: scale(1.1);
        }

        /* Efectos en los botones */
        .btn-modern {
            font-weight: bold;
            border-radius: 50px;
            padding: 10px 25px;
            letter-spacing: 1px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
            border: none;
        }

            .btn-modern.btn-primary {
                background-color: #007bff;
                background-image: linear-gradient(45deg, #007bff, #0056b3);
                color: white;
            }

            .btn-modern.btn-secondary {
                background-color: transparent;
                border: 2px solid #6c757d;
                color: #6c757d;
            }

            .btn-modern.btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 10px rgba(0, 123, 255, 0.4);
                background-image: linear-gradient(45deg, #0056b3, #004085);
            }

            .btn-modern.btn-secondary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 10px rgba(108, 117, 125, 0.4);
                color: #fff;
                background-color: #6c757d;
            }
    </style>
}

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-md-8 text-center">
            <h1 class="display-4 fw-bold text-dark">Explora Nuestros Productos</h1>
            <p class="lead text-muted">Descubre la calidad y variedad que ofrecemos para tu bienestar.</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i> Por el momento no hay productos disponibles. Vuelve a intentarlo más tarde.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 card-hover">
                        <div class="card-img-container">
                            <img src="@(!string.IsNullOrEmpty(producto.imagenUrl) ? producto.imagenUrl : "/Images/default.png")"
                                 class="card-img-top" alt="@producto.nombre" />
                        </div>
                        <div class="card-body d-flex flex-column p-3">
                            <small class="text-muted text-uppercase fw-bold mb-1">
                                @(producto?.Categoria?.nombre ?? "Sin categoría")
                            </small>
                            <h5 class="card-title fw-bold">
                                <a asp-action="Detalle" asp-route-id="@producto.id" class="text-dark text-decoration-none">
                                    @producto.nombre
                                </a>
                            </h5>
                            <h4 class="text-primary fw-bold mt-auto mb-2">$@producto.precio.ToString("N0")</h4>

                            @if (producto != null && producto.id > 0)
                            {
                                <form asp-controller="Carrito" asp-action="Agregar" method="post">
                                    <input type="hidden" name="id" value="@producto.id" />
                                    <input type="hidden" name="cantidad" value="1" />
                                    <button type="submit" class="btn btn-primary btn-sm w-100 mt-2 btn-modern">
                                        <i class="bi bi-cart-plus-fill me-1"></i> Agregar al Carrito
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm w-100 mt-2 btn-modern" disabled>
                                    <i class="bi bi-cart-x me-1"></i> No disponible
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>