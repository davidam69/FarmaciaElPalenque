@model List<Productos>
﻿@{
    ViewData["Title"] = "Nuestros Productos";
}

@{
    ViewData["Title"] = "Nuestros Productos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cards.css" asp-append-version="true" />
}

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-md-8 text-center">
            <h1 class="display-4 fw-bold text-dark">Explorá nuestros productos</h1>
            <p class="lead text-muted">Calidad y variedad para tu bienestar.</p>
        </div>
    </div>

    <!-- ✅ Bloque de mensajes -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Html.Raw(TempData["Error"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    <!-- ✅ Fin bloque de mensajes -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i>
            Por el momento no hay productos disponibles. Volvé más tarde.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 card-moderno">
                        <div class="card-img-container">
                            <img src="@(string.IsNullOrWhiteSpace(producto.imagenUrl) ? "/images/default.png" : producto.imagenUrl)"
                                 class="card-img-top" alt="@producto.nombre" />
                        </div>

                        <div class="card-body d-flex flex-column card-body-moderno">
                            <small class="text-muted text-uppercase fw-bold mb-1">
                                @(producto?.Categoria?.nombre ?? "Sin categoría")
                            </small>

                            <h5 class="card-title fw-bold">
                                <a asp-action="Detalle" asp-route-id="@producto.id" class="text-dark text-decoration-none">
                                    @producto.nombre
                                </a>
                            </h5>

                            <h4 class="text-primary fw-bold mt-auto mb-2">
                                @producto.precio.ToString("C")
                            </h4>

                            @if (producto.Stock > 0)
                            {
                                <form asp-controller="Carrito" asp-action="Agregar" method="post" class="mt-1">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@producto.id" />
                                    <input type="hidden" name="cantidad" value="1" />
                                    <button type="submit" class="btn btn-primary btn-sm w-100 btn-card-moderno">
                                        <i class="bi bi-cart-plus-fill me-1"></i> Agregar al carrito
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm w-100 mt-1 btn-card-moderno" disabled>
                                    <i class="bi bi-cart-x me-1"></i> Sin stock
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>