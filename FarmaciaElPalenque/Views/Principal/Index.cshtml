@model List<FarmaciaElPalenque.Models.Productos>

@{
    ViewData["Title"] = "Nuestros Productos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />
}

<style>
   
    .card-moderno {
        background: rgba(255, 255, 255, 0.6); 
        backdrop-filter: blur(8px); 
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
    }

        .card-moderno:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

  
    .card-img-container {
        width: 100%;
        height: 180px;
        overflow: hidden;
    }

        .card-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .card-moderno:hover .card-img-container img {
        transform: scale(1.1);
    }

    .card-body-moderno {
        padding: 1.5rem;
    }

    .btn-card-moderno {
        font-weight: bold;
        border-radius: 50px;
        padding: 10px 25px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .btn-card-moderno:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 10px rgba(0, 123, 255, 0.4);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-md-8 text-center">
            <h1 class="display-4 fw-bold text-dark">Explora Nuestros Productos</h1>
            <p class="lead text-muted">Descubre la calidad y variedad que ofrecemos para tu bienestar.</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i> Por el momento no hay productos disponibles. Vuelve a intentarlo más tarde.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 card-moderno">
                        <div class="card-img-container">
                            <img src="@(!string.IsNullOrEmpty(producto.imagenUrl) ? producto.imagenUrl : "/Images/default.png")"
                                 class="card-img-top" alt="@producto.nombre" />
                        </div>
                        <div class="card-body d-flex flex-column card-body-moderno">
                            <small class="text-muted text-uppercase fw-bold mb-1">
                                @(producto?.Categoria?.nombre ?? "Sin categoría")
                            </small>
                            <h5 class="card-title fw-bold">
                                <a asp-action="Detalle" asp-route-id="@producto.id" class="text-dark text-decoration-none">
                                    @producto.nombre
                                </a>
                            </h5>
                            <h4 class="text-primary fw-bold mt-auto mb-2">$@producto.precio.ToString("N0")</h4>

                            @if (producto != null && producto.id > 0)
                            {
                                <form asp-controller="Carrito" asp-action="Agregar" method="post">
                                    <input type="hidden" name="id" value="@producto.id" />
                                    <input type="hidden" name="cantidad" value="1" />
                                    <button type="submit" class="btn btn-primary btn-sm w-100 mt-2 btn-card-moderno">
                                        <i class="bi bi-cart-plus-fill me-1"></i> Agregar al Carrito
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm w-100 mt-2 btn-card-moderno" disabled>
                                    <i class="bi bi-cart-x me-1"></i> No disponible
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>