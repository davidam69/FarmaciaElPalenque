@model List<FarmaciaElPalenque.Models.Productos>
@{
    ViewData["Title"] = "Ofertas";
    decimal FactorDesc = 0.70m; // 30% OFF (pagás el 70%)
}

@section Styles {
    <style>
        /* Estilo moderno y suave */
        .ofertas-hero {
            background: linear-gradient(135deg, #e6f0ff 0%, #f5ecff 60%, #fff 100%);
            border-radius: 18px;
            padding: 28px;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 18px;
        }

            .ofertas-hero .badge-promo {
                background: #0d6efd;
                color: #fff;
                padding: .45rem .7rem;
                border-radius: 999px;
                font-weight: 600;
                font-size: .9rem;
            }

        .grid-cards {
            display: grid;
            gap: 18px;
            grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        }

        .card-oferta {
            background: rgba(255,255,255,.8);
            border: 1px solid rgba(0,0,0,.06);
            border-radius: 14px;
            overflow: hidden;
            transition: transform .2s ease, box-shadow .2s ease;
        }

            .card-oferta:hover {
                transform: translateY(-4px);
                box-shadow: 0 10px 28px rgba(0,0,0,.08);
            }

        .card-img-box {
            height: 170px;
            overflow: hidden;
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .card-img-box img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .promo-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background: #198754;
            color: #fff;
            font-weight: 700;
            border-radius: 8px;
            font-size: .85rem;
            padding: .25rem .5rem;
        }

        .cat {
            font-size: .75rem;
            text-transform: uppercase;
            color: #6c757d;
            letter-spacing: .04em;
        }

        .precio {
            font-weight: 800;
            font-size: 1.15rem;
        }

        .precio-linea {
            color: #6c757d;
            text-decoration: line-through;
            font-size: .95rem;
        }

        .precio-x3 {
            font-weight: 700;
            color: #198754;
        }

        .btn-soft {
            border-radius: 999px;
            font-weight: 600;
        }

        .btn-outline-soft {
            border-radius: 999px;
        }
    </style>
}

<div class="ofertas-hero">
    <span class="badge-promo"><i class="bi bi-lightning-charge-fill me-1"></i> PROMO ESPECIAL</span>
    <div>
        <h2 class="mb-1">30% de descuento en <u>3 productos iguales</u></h2>
        <div class="text-muted">Llevando 3 unidades del mismo producto: precio por unidad con descuento y total por 3 ya calculado.</div>
    </div>
</div>

@if (!(Model?.Any() ?? false))
{
    <div class="alert alert-info">Por ahora no hay productos en oferta. ¡Vuelve pronto!</div>
}
else
{
    <div class="grid-cards">
        @foreach (var p in Model)
        {
            if (p == null) { continue; }

            var precio = p.precio;
            var precioUnidadLlevando3 = decimal.Round(precio * FactorDesc, 2);
            var totalPor3 = decimal.Round(precio * 3 * FactorDesc, 2);

            <div class="card-oferta position-relative">
                <div class="promo-badge">30% OFF x3</div>
                <div class="card-img-box">
                    <img src="@(!string.IsNullOrEmpty(p.imagenUrl) ? p.imagenUrl : "/Images/default.png")"
                         alt="@p.nombre" />
                </div>
                <div class="p-3">
                    <div class="cat">@p?.Categoria?.nombre</div>
                    <h5 class="fw-bold mb-1">@p?.nombre</h5>

                    <div class="d-flex align-items-center gap-2 mb-2">
                        <span class="precio">@precio.ToString("C")</span>
                        <small class="text-muted">precio regular</small>
                    </div>

                    <div class="small text-muted mb-1">
                        <span class="precio-linea">@precio.ToString("C")</span> ➜
                        <span class="precio-x3">@precioUnidadLlevando3.ToString("C")</span> <span class="text-success">c/u llevando 3</span>
                    </div>
                    <div class="small text-muted mb-3">
                        <i class="bi bi-bag-check"></i> Total por 3: <strong class="text-success">@totalPor3.ToString("C")</strong>
                    </div>

                    <div class="d-flex gap-2">
                        <form asp-controller="Carrito" asp-action="Agregar" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@p?.id" />
                            <input type="hidden" name="cantidad" value="1" />
                            <button type="submit" class="btn btn-outline-primary btn-sm btn-outline-soft">
                                <i class="bi bi-cart-plus me-1"></i> Agregar 1
                            </button>
                        </form>

                        <form asp-controller="Carrito" asp-action="Agregar" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@p?.id" />
                            <input type="hidden" name="cantidad" value="3" />
                            <button type="submit" class="btn btn-success btn-sm btn-soft">
                                <i class="bi bi-3-circle me-1"></i> Llevar 3
                            </button>
                        </form>

                        <a asp-action="Detalle" asp-route-id="@p?.id" class="btn btn-light btn-sm ms-auto">
                            Ver detalle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}