@model IEnumerable<Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h2>Usuarios Registrados</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@Html.Raw(TempData["Error"])</div>
}
<p>
    <a asp-action="Panel" class="btn btn-success"><i class="bi bi-arrow-left me-1"></i>Volver al Panel</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Rol</th>
            <th style="width:140px;">Acciones</th>
            <th style="width:160px;">Historial</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.nombre</td>
                <td>@u.apellido</td>
                <td>@u.email</td>
                <td>@u.rol</td>
                <td>
                    @if (u.email != Context.Session.GetString("Usuario"))
                    {
                        <form asp-controller="Admin" asp-action="EliminarUsuario" asp-route-id="@u.id"
                              method="post" onsubmit="return confirm('¿Estás seguro de eliminar a este usuario?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">No disponible</span>
                    }
                </td>
                <td>
                    @if (u.rol != "Administrador")
                    {
                        <a asp-controller="Pedidos" asp-action="HistorialUsuario" asp-route-usuarioId="@u.id"
                           class="btn btn-info btn-sm">Ver Compras</a>
                    }
                    else
                    {
                        <span class="text-muted">No disponible</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>