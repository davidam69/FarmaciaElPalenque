@model Productos

@{
    ViewData["Title"] = "Crear Producto";
}

<h2>Agregar Producto</h2>

<form asp-action="CrearProducto" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="nombre" class="form-label"></label>
        <input asp-for="nombre" class="form-control" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="precio" class="form-label"></label>
        <input asp-for="precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" type="number" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="categoriaId" class="form-label">Categoría</label>
        <select asp-for="categoriaId" class="form-select" asp-items="@(ViewBag.Categorias)">
            <option value="">Seleccione una categoría</option>
        </select>
        <span asp-validation-for="categoriaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="imagenUrl" class="form-label"></label>
        <input asp-for="imagenUrl" class="form-control" />
        <span asp-validation-for="imagenUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}