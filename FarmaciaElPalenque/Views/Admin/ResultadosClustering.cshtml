@model List<FarmaciaElPalenque.Models.AnalisisClienteViewModel>

@{
    ViewData["Title"] = "Análisis de Clientes - Clustering ML";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="display-5 fw-bold text-dark mb-2">📊 Análisis de Clientes (ML)</h2>
            <p class="lead text-muted">Segmentación inteligente por comportamiento de compra</p>
        </div>
        <div class="text-end">
            <div class="btn-group">
                @* <button class="btn btn-outline-primary" onclick="exportarTabla()">📥 Exportar CSV</button>*@
                <a href="@Url.Action("Panel", "Admin")" class="btn btn-secondary">← Volver al Panel</a>
            </div>
        </div>
    </div>

    <!-- Resumen Estadístico -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title">Total Clientes Analizados</h6>
                    <h4 class="mb-0">@Model.Count</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6 class="card-title">Requieren Aviso</h6>
                    <h4 class="mb-0">@Model.Count(m => m.DeberiaAvisarse)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title">Clientes Activos</h6>
                    <h4 class="mb-0">@Model.Count(m => !m.DeberiaAvisarse)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title">Clusters Identificados</h6>
                    <h4 class="mb-0">@Model.Select(m => m.ClusterId).Distinct().Count()</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros Rápidos -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Filtrar por Cluster:</label>
                    <select id="filtroCluster" class="form-select" onchange="filtrarTabla()">
                        <option value="">Todos los clusters</option>
                        @foreach (var cluster in Model.Select(m => m.ClusterId).Distinct().OrderBy(c => c))
                        {
                            <option value="@cluster">Cluster @cluster</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Filtrar por Estado:</label>
                    <select id="filtroEstado" class="form-select" onchange="filtrarTabla()">
                        <option value="">Todos los estados</option>
                        <option value="requiere">Requiere Aviso</option>
                        <option value="activo">Activo</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Buscar Cliente:</label>
                    <input type="text" id="buscarCliente" class="form-control" placeholder="Nombre o email..." onkeyup="filtrarTabla()">
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla Principal -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">📋 Resultados del Análisis</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0" id="tablaClientes">
                    <thead class="table-dark">
                        <tr>
                            <th>Cliente</th>
                            <th>Email</th>
                            <th>Compras Totales</th>
                            <th>Monto Gastado</th>
                            <th>Cluster</th>
                            <th>Días Última Compra</th>
                            <th>Promedio Entre Compras</th>
                            <th>Estado ML</th>
                            <th>Aviso Hoy</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="fila-cliente" data-cluster="@item.ClusterId" data-estado="@(item.DeberiaAvisarse ? "requiere" : "activo")">
                                <td>
                                    <strong>@item.ClienteDatos.Nombre</strong>
                                    <br><small class="text-muted">ID: @item.ClienteDatos.UsuarioId</small>
                                </td>
                                <td>@item.EmailCliente</td>
                                <td>
                                    <span class="badge bg-secondary">@item.ClienteDatos.ComprasTotales</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">$@item.ClienteDatos.MontoGastado.ToString("N0")</span>
                                </td>
                                <td>
                                    <span class="badge @GetClusterBadgeClass(item.ClusterId)">Cluster @item.ClusterId</span>
                                </td>
                                <td>
                                    <span class="@GetDiasBadgeClass(item.ClienteDatos.DiasDesdeUltimaCompra)">
                                        @item.ClienteDatos.DiasDesdeUltimaCompra días
                                    </span>
                                </td>
                                <td>@(item.ClienteDatos.PromedioDiasEntreCompras > 0 ? item.ClienteDatos.PromedioDiasEntreCompras.ToString("N0") + " días" : "N/A")</td>
                                <td>
                                    @if (item.DeberiaAvisarse)
                                    {
                                        <span class="badge bg-warning text-dark">⚠️ REQUIERE AVISO</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">✅ ACTIVO</span>
                                    }
                                </td>
                                <td>
                                    @if (item.AvisoEnviadoHoy)
                                    {
                                        <span class="badge bg-primary">✅ ENVIADO</span>
                                    }
                                    else if (item.DeberiaAvisarse)
                                    {
                                        <span class="badge bg-danger">❌ PENDIENTE</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-muted">No Requerido</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("HistorialUsuario", "Pedidos", new { usuarioId = item.ClienteDatos.UsuarioId })" 
                                           class="btn btn-outline-primary" title="Ver historial">
                                            📋
                                        </a>
                                        @if (item.DeberiaAvisarse && !item.AvisoEnviadoHoy)
                                        {
                                            <button class="btn btn-outline-warning" 
                                                    onclick="enviarAvisoManual(@item.ClienteDatos.UsuarioId, '@item.ClienteDatos.Nombre')"
                                                    title="Enviar aviso manual">
                                                ✉️
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Leyenda -->
    <div class="mt-3">
        <small class="text-muted">
            <strong>Leyenda:</strong> 
            <span class="badge bg-warning text-dark">Requiere atención</span> - 
            <span class="badge bg-success">Cliente activo</span> - 
            <span class="badge bg-danger">Días críticos</span>
        </small>
    </div>
</div>

@section Scripts {
    <script>
        function filtrarTabla() {
            const filtroCluster = document.getElementById('filtroCluster').value;
            const filtroEstado = document.getElementById('filtroEstado').value;
            const buscarTexto = document.getElementById('buscarCliente').value.toLowerCase();
            
            const filas = document.querySelectorAll('.fila-cliente');
            
            filas.forEach(fila => {
                const cluster = fila.getAttribute('data-cluster');
                const estado = fila.getAttribute('data-estado');
                const textoFila = fila.textContent.toLowerCase();
                
                const coincideCluster = !filtroCluster || cluster === filtroCluster;
                const coincideEstado = !filtroEstado || estado === filtroEstado;
                const coincideBusqueda = !buscarTexto || textoFila.includes(buscarTexto);
                
                if (coincideCluster && coincideEstado && coincideBusqueda) {
                    fila.style.display = '';
                } else {
                    fila.style.display = 'none';
                }
            });
        }

        function exportarTabla() {
            let csv = [];
            const filas = document.querySelectorAll('.fila-cliente:not([style*="display: none"])');
            
            // Encabezados
            csv.push('Cliente,Email,Compras Totales,Monto Gastado,Cluster,Días Última Compra,Promedio Entre Compras,Estado,Aviso Pendiente');
            
            filas.forEach(fila => {
                const celdas = fila.querySelectorAll('td');
                const filaData = [
                    `"${celdas[0].textContent.trim()}"`,
                    `"${celdas[1].textContent.trim()}"`,
                    celdas[2].textContent.replace('Compras: ', '').trim(),
                    celdas[3].textContent.replace('$', '').replace('.', '').trim(),
                    celdas[4].textContent.replace('Cluster ', '').trim(),
                    celdas[5].textContent.replace(' días', '').trim(),
                    celdas[6].textContent.replace(' días', '').trim(),
                    celdas[7].textContent.trim(),
                    celdas[8].textContent.trim()
                ];
                csv.push(filaData.join(','));
            });
            
            const enlace = document.createElement('a');
            enlace.href = 'data:text/csv;charset=utf-8,' + encodeURIComponent(csv.join('\n'));
            enlace.download = 'analisis-clientes-' + new Date().toISOString().split('T')[0] + '.csv';
            enlace.click();
        }

        function enviarAvisoManual(usuarioId, nombre) {
            if (confirm(`¿Enviar aviso de re-engagement a ${nombre}?`)) {
                // Aquí puedes hacer una llamada AJAX a tu backend
                fetch('@Url.Action("EnviarAvisoManual", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ usuarioId: usuarioId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Aviso enviado correctamente');
                        location.reload();
                    } else {
                        alert('Error al enviar el aviso: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Error de conexión');
                });
            }
        }

        // Inicializar tooltips de Bootstrap si los usas
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}

@functions {
    public string GetClusterBadgeClass(uint clusterId)
    {
        return clusterId switch
        {
            0 => "bg-primary",
            1 => "bg-success", 
            2 => "bg-info",
            _ => "bg-secondary"
        };
    }

    public string GetDiasBadgeClass(float dias)
    {
        if (dias > 60) return "bg-danger text-white";
        if (dias > 30) return "bg-warning text-dark";
        return "bg-light text-dark";
    }
}